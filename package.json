{
  "name": "@dddforum",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky",
    "clean": "npm run clean --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "prettier-format": "prettier --config ./.prettierrc --write .",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "test:e2e:back": "npm run test:e2e --workspace=@dddforum/backend",
    "test:e2e:front": "npm run test:e2e --workspace=@dddforum/backend",
    "start:dev:back": "npm run start:dev --workspace=@dddforum/backend",
    "start:dev:front": "npm run start:dev --workspace=@dddforum/frontend"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/types": "^19.5.0",
    "@faker-js/faker": "^9.0.2",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.5.5",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "envalid": "^8.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-cucumber": "^4.5.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "zod": "^3.23.8"
  }
}
