{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "isolatedModules": true,
    "paths": {
      "@dddforum/shared/*": ["../shared/*"]}
  },
  "include": ["src"],
  "exclude": ["**/*.test.*"]}
