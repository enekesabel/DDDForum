{
  "name": "@dddforum/backend",
  "version": "1.0.0",
  "description": "Backend for DDDForum",
  "scripts": {
    "build": "npm run generate && ts-node prepareEnv.ts npm run clean && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "clean": "rimraf ./build",
    "generate": "ts-node prepareEnv.ts prisma generate",
    "migrate": "ts-node prepareEnv.ts prisma migrate dev",
    "db:seed": "ts-node prepareEnv.ts prisma db seed",
    "db:reset": "ts-node prepareEnv.ts prisma migrate reset",
    "db:prepare:dev": "npm run migrate && npm run generate && npm run db:seed",
    "db:prepare:prod": "npm run migrate && npm run db:seed",
    "start:db:dev": "docker-compose up -d",
    "start:dev": "npm run start:db:dev && npm run db:prepare:dev && ts-node prepareEnv.ts npx nodemon",
    "start:dev:no-watch": "npm run db:prepare:dev && ts-node prepareEnv.ts ts-node src/index.ts",
    "start": "npm run db:prepare:prod && node build/backend/src/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test:unit": "jest -c jest.config.unit.ts --detectOpenHandles",
    "test:dev": "jest -c jest.config.ts --detectOpenHandles",
    "test:e2e": "jest -c jest.config.e2e.ts --detectOpenHandles",
    "test:infra": "jest -c jest.config.infra.ts --detectOpenHandles"
  },
  "prisma": {
    "schema": "src/shared/database/prisma/schema.prisma",
    "seed": "ts-node src/shared/database/prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/supertest": "^6.0.2",
    "node-mocks-http": "^1.16.1",
    "nodemon": "^2.0.19",
    "supertest": "^7.0.0"
  },
  "dependencies": {
    "@dddforum/shared": "file:../shared",
    "@prisma/client": "^5.17.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "pg": "^8.12.0",
    "prisma": "^5.17.0"
  }
}
