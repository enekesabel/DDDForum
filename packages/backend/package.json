{
  "name": "@dddforum/backend",
  "version": "1.0.0",
  "description": "Backend for DDDForum",
  "main": "index.js",
  "scripts": {
    "build": "ts-node prepareEnv.ts npm run clean && tsc",
    "clean": "rimraf ./build",
    "generate": "ts-node prepareEnv.ts prisma generate",
    "migrate": "ts-node prepareEnv.ts prisma migrate dev",
    "db:seed": "ts-node prepareEnv.ts prisma db seed",
    "db:reset": "ts-node prepareEnv.ts prisma db reset",
    "start:dev": "npm run migrate && npm run generate && npx nodemon",
    "start:dev:no-watch": "npm run migrate && npm run generate && ts-node prepareEnv.ts ts-node src/index.ts",
    "start": "npm run build && node build/index.js",
    "lint": "eslint .",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "test:e2e": "jest -c jest.config.e2e.ts --detectOpenHandles"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "nodemon": "^2.0.19"
  },
  "dependencies": {
    "@dddforum/shared": "file:../shared",
    "@prisma/client": "^5.17.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "pg": "^8.12.0",
    "prisma": "^5.17.0"
  }
}
